@using WebApplication12.Models
@model List<Birim>
@{
    ViewData["Title"] = "Index";
}
<table class="table table-borderd">
    <tr>
        <th>BirimID</th>
        <th>Birim</th>
        <th>Sil</th>
        <th>Güncelle</th>
        <th>Detaylar</th>
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.BirimID</td>
            <td>@x.BirimAD</td>
            <td><a href="/Default/BirimSil/@x.BirimID" class="btn btn-danger">Sil</a></td>
            <td><a href="/Default/BirimGetir/@x.BirimID" class="btn btn-success">Güncelle</a></td>
            <td><a href="/Default/BirimDetay/@x.BirimID" class="btn btn-outline-info">Detaylar</a></td>y
        </tr>
    }

</table>
<a href="/Default/YeniBirim/" class="btn btn-primary">Yeni Birim</a>