@model WebApplication12.Models.Personel
@{
    ViewData["Title"] = "YeniPersonel";
}

<form asp-controller="Personelim" asp-action="YeniPersonel" method="post" class="form-group">

    <b>Yeni Personel Ekle</b>
    <br />

    <b>Ad</b>
    <br />

    @Html.TextBoxFor(x => x.Ad, new { @class = "form-control" })

    <b>Soyad</b>
    <br />

    @Html.TextBoxFor(x => x.Soyad, new { @class = "form-control" })

    <b>Şehir</b>
    <br />

    @Html.TextBoxFor(x => x.Sehir, new { @class = "form-control" })
    <b>Birim</b>
    <br />

    @Html.DropDownListFor(x => x.Birim.BirimID, (List<SelectListItem>)ViewBag.dgr, new { @class = "form-control" })
    <br />
    <button class="btn btn-info" type="submit">Personel Ekle</button>
</form>

